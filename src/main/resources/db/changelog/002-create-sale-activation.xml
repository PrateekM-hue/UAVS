<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-sale-activation" author="uavs-dev">
        <createTable tableName="sale_activation">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="unique_ref" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_ean" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="card_no" type="VARCHAR(100)"/>
            <column name="invoice_no" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="store_code" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="device_id" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="txn_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="NEW">
                <constraints nullable="false"/>
            </column>
            <column name="activation_code" type="VARCHAR(255)"/>
            <column name="void_code" type="VARCHAR(255)"/>
            <column name="tnc" type="TEXT"/>
            <column name="activation_steps" type="TEXT"/>
            <column name="vendor_raw_request" type="TEXT"/>
            <column name="vendor_raw_response" type="TEXT"/>
            <column name="error_code" type="VARCHAR(10)"/>
            <column name="error_message" type="VARCHAR(500)"/>
            <column name="retry_count" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue tableName="sale_activation" columnName="created_at" defaultValueComputed="CURRENT_TIMESTAMP"/>
        <addDefaultValue tableName="sale_activation" columnName="updated_at" defaultValueComputed="CURRENT_TIMESTAMP"/>

        <addForeignKeyConstraint 
            constraintName="fk_sale_activation_product_ean"
            baseTableName="sale_activation" 
            baseColumnNames="product_ean"
            referencedTableName="product_catalog" 
            referencedColumnNames="product_ean"/>
    </changeSet>

</databaseChangeLog>