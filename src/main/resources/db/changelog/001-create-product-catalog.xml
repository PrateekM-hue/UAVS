<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-product-catalog" author="uavs-dev">
        <createTable tableName="product_catalog">
            <column name="product_ean" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="vendor_endpoint" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="is_posa" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="min_amount" type="BIGINT"/>
            <column name="max_amount" type="BIGINT"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue tableName="product_catalog" columnName="created_at" defaultValueComputed="CURRENT_TIMESTAMP"/>
        <addDefaultValue tableName="product_catalog" columnName="updated_at" defaultValueComputed="CURRENT_TIMESTAMP"/>
    </changeSet>

</databaseChangeLog>